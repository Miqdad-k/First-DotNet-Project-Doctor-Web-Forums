@model DoctorWebForum.Models.DoctorDetails

@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditDetails", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

   
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.U_id)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.p_id)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Email)

</div>




    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" src="@Url.Content(Model.u_Image)" Width="200" height="200">
                <input type="file" name="file"/>
                <span class="font-weight-bold">@Model.U_name</span><span class="text-black-50">@Model.Email</span><span> </span></div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">Name</label>
                            @Html.EditorFor(model => model.U_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
                            @Html.ValidationMessageFor(model => model.U_name, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-md-6">
                            <label class="labels">Father Name</label>@Html.EditorFor(model => model.F_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Father Name" } })
                            @Html.ValidationMessageFor(model => model.F_name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Date Of Birth</label>@Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control", @placeholder = "MM/DD/YYYY" } })
                            @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <label class="labels">Phone No</label>
                            @Html.EditorFor(model => model.Phone_No, new { htmlAttributes = new { @class = "form-control", @placeholder = "0XXX-XXXXXXX" } })
                            @Html.ValidationMessageFor(model => model.Phone_No, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Nationality</label>
                            @Html.EditorFor(model => model.Nationality, new { htmlAttributes = new { @class = "form-control", @placeholder = "Pakistani , Indian etc" } })
                            @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Specailization</label>@Html.EditorFor(model => model.Specailization, new { htmlAttributes = new { @class = "form-control", @placeholder = "Heart , Lungs etc" } })
                            @Html.ValidationMessageFor(model => model.Specailization, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">City</label>
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @placeholder = "Karachi , Islamabad etc" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <label class="labels">country</label>@Html.EditorFor(model => model.country, new { htmlAttributes = new { @class = "form-control", @placeholder = "Pakistan , China etc" } })
                            @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Gender</label>
                            @Html.DropDownListFor(model => model.Gender, new List<SelectListItem>

                        {
                           new SelectListItem{ Text="Male", Value = "Male" },
                           new SelectListItem{ Text="Female", Value = "Female" }
                        }, "Select Gender", new { @class = "col-md-12" })
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Status</label>
                            @Html.DropDownListFor(model => model.Status, new List<SelectListItem>

                     {
                        new SelectListItem{ Text="Public", Value = "Active" },
                        new SelectListItem{ Text="Private", Value = "InActive" }
                     }, "Select status", new { @class = "col-md-12" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience"><span><b>Edit Professional</b></span></div><br>
                    <div class="col-md-12">
                        <label class="labels">School</label>
                        @Html.EditorFor(model => model.School, new { htmlAttributes = new { @class = "form-control", @placeholder = "School . . . " } })
                        @Html.ValidationMessageFor(model => model.School, "", new { @class = "text-danger" })
                    </div> <br>
                           <div class="col-md-12">
                               <label class="labels">College</label>
                               @Html.EditorFor(model => model.College, new { htmlAttributes = new { @class = "form-control", @placeholder = "Collage . . ." } })
                               @Html.ValidationMessageFor(model => model.College, "", new { @class = "text-danger" })
                           </div>
                           <div class="col-md-12">
                               <label class="labels">University</label>
                               @Html.EditorFor(model => model.University, new { htmlAttributes = new { @class = "form-control", @placeholder = "University . . . " } })
                               @Html.ValidationMessageFor(model => model.University, "", new { @class = "text-danger" })
                           </div>
                           <div class="col-md-12">
                               <label class="labels">Experience</label>
                               @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control", @placeholder = "10 years . . . " } })
                               @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger" })
                           </div>
                </div>
            </div>
        </div>
    </div>
}

